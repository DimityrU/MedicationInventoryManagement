@model MedicationInventoryManagement.Models.MedicationViewModel

<div class="position-fixed end-0 col-4">
    <div class="container">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
        @await Html.PartialAsync("_ErrorMessage", error.ErrorMessage);
        }
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-lg-5">
        <div class="card shadow-lg p-3 mb-5 bg-white rounded">
            <div class="card-body">
                <h2 class="card-title">Create Medication</h2>

                <form asp-controller="Home" asp-action="Create" method="post">
                    <div class="form-group mb-4">
                        <label asp-for="Medication.MedicationName" class="form-label">Medication</label>
                        <input asp-for="Medication.MedicationName" class="form-control" required>
                        <span asp-validation-for="Medication.MedicationName" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-4">
                        <label asp-for="Medication.ExpirationDate" class="form-label">Expiration Date</label>
                        <input asp-for="Medication.ExpirationDate" class="form-control" type="date" required>
                        <span asp-validation-for="Medication.ExpirationDate" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-4">
                        <label asp-for="Medication.Quantity" class="form-label"></label>
                        <input asp-for="Medication.Quantity" class="form-control" type="number" required>
                        <span asp-validation-for="Medication.Quantity" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary btn-lg btn-block">Create</button>
                </form>

            </div>
        </div>
    </div>
</div>